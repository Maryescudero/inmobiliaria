@{
    ViewData["Title"] = "Propietario";
}

<h2 class="h2-inquilino-background">Gestión de Propietarios</h2>

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <a href="#" class="btn btn-agregar">Agregar</a>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar">
            <button class="btn btn-secondary" type="submit">Buscar</button>
        </form>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>DNI</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>12345678</td>
                <td>Pérez</td>
                <td>Juan</td>
                <td>1234-5678</td>
                <td>Activo</td>
                <td>
                    <a href="#" class="btn btn-sm btn-editar">Editar</a>
                    <a href="#" class="btn btn-sm btn-eliminar">Eliminar</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>